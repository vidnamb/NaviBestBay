<% provide(:title, 'Sell Item') %>
<h1>New Item</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @item,:html => { :multipart => true } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :category %>
        <%= f.select :category, options_for_select(["Books", "Phones","Other"])%>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.label :base_price %>
        <%= f.text_field :base_price %>
        <p>
          <b> Picture </b><br/>
          <%= f.file_field :pic %>
        </p>

        <%= f.submit "Submit Item for Sale", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>